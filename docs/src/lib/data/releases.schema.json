{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Releases",
  "description": "Application release history. Single source of truth for /docs and GitHub releases.",
  "type": "object",
  "required": ["releases"],
  "properties": {
    "$schema": { "type": "string" },
    "_comment": { "type": "string" },
    "releases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["version", "platform", "date", "changes"],
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version (e.g., 1.4.0)"
          },
          "platform": {
            "type": "string",
            "enum": ["macos", "windows"],
            "description": "Target platform for this release"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Release date (YYYY-MM-DD)"
          },
          "highlight": {
            "type": "string",
            "description": "Short headline for the release"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["text", "type"],
              "properties": {
                "text": {
                  "type": "string",
                  "description": "User-facing change description. Write as a feature or benefit, not a commit message. Good: 'Dialogs now support markdown formatting' Bad: 'Add markdown support to dialogs'. Focus on what users can do or what's improved."
                },
                "type": {
                  "type": "string",
                  "enum": ["added", "changed", "fixed", "removed"],
                  "description": "Type of change"
                },
                "scope": {
                  "type": "string",
                  "enum": ["app", "server", "docs", "cli"],
                  "description": "Which part of the project this change affects"
                },
                "featured": {
                  "type": "boolean",
                  "description": "Show this change in the hero dialog (only mark interesting/big updates)"
                },
                "starred": {
                  "type": "boolean",
                  "description": "Highlight this change in the homepage hero pane (last 5 starred changes shown)"
                }
              }
            }
          }
        }
      }
    }
  }
}
