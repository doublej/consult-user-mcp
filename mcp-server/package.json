{
  "name": "speak-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for macOS native dialogs and text-to-speech",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:swift && tsc",
    "build:swift": "cd ../dialog-cli && swift build -c release",
    "build:ts": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
