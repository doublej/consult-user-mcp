{
  "name": "consult-user-mcp",
  "private": true,
  "description": "Native dialog system for MCP servers",
  "scripts": {
    "build": "cd mcp-server && bun run build",
    "build:cli": "cd dialog-cli && swift build -c release",
    "build:app": "cd macos-app && swift build -c release",
    "build:cli:windows": "cd dialog-cli-windows && dotnet publish -r win-x64 --self-contained -p:PublishSingleFile=true",
    "dev:windows-tray": "cd windows-tray-app && dotnet build",
    "build:windows-tray": "cd windows-tray-app && dotnet publish -c Release -r win-x64 --self-contained -p:PublishSingleFile=true",
    "build:bundle": "bash scripts/build-app.sh",
    "dev": "bash scripts/dev-install.sh",
    "start": "cd mcp-server && bun run start",
    "changelog": "bun run scripts/generate-changelog.ts",
    "build:windows": "powershell -ExecutionPolicy Bypass -File scripts/build-windows.ps1",
    "release:windows": "powershell -ExecutionPolicy Bypass -File scripts/release-windows.ps1"
  },
  "workspaces": [
    "mcp-server"
  ]
}
