<UserControl x:Class="ConsultUserMCP.Settings.UninstallSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel>
        <!-- Header -->
        <StackPanel Margin="0,0,0,24">
            <TextBlock Text="Uninstall" Foreground="#E6E6E6"
                       FontSize="20" FontWeight="SemiBold" FontFamily="Segoe UI" />
            <TextBlock Text="Remove Consult User MCP from this computer" Foreground="#A0A0A0"
                       FontSize="12" FontFamily="Segoe UI" Margin="0,4,0,0" />
        </StackPanel>

        <!-- What will be removed -->
        <TextBlock Text="What will be removed" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                   Margin="0,0,0,12" />

        <Border Background="#252525" CornerRadius="8" Padding="0" Margin="0,0,0,24">
            <ItemsControl x:Name="RemovalList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="16,12" BorderBrush="#333" BorderThickness="0,0,0,1">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" Foreground="#E6E6E6"
                                           FontSize="13" FontFamily="Segoe UI" />
                                <TextBlock Text="{Binding Detail}" Foreground="#808080"
                                           FontSize="11" FontFamily="Consolas" Margin="0,4,0,0"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Options -->
        <TextBlock Text="Options" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                   Margin="0,0,0,12" />

        <CheckBox x:Name="KeepDataCheck" Content="Keep settings and dialog history"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnKeepDataChanged" Unchecked="OnKeepDataChanged"
                  Margin="0,0,0,8" />
        <TextBlock Text="Preserves %APPDATA%\ConsultUserMCP" Foreground="#808080"
                   FontSize="11" FontFamily="Segoe UI" Margin="24,0,0,24" />

        <!-- Uninstall Button -->
        <Button x:Name="UninstallButton" Click="OnUninstallClick"
                HorizontalAlignment="Left" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="#DC2626" CornerRadius="6"
                            Padding="20,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="White" FontSize="14"
                                       VerticalAlignment="Center" Margin="0,0,8,0" />
                            <TextBlock Text="Uninstall Consult User MCP"
                                       Foreground="White" FontSize="14"
                                       FontWeight="SemiBold" FontFamily="Segoe UI" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#B91C1C" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- CLI Hint -->
        <Border Background="#252525" CornerRadius="6" Padding="16" Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets"
                           Foreground="#808080" FontSize="14"
                           VerticalAlignment="Center" Margin="0,0,12,0" />
                <TextBlock Text="You can also run uninstall.ps1 from the repository."
                           Foreground="#808080" FontSize="12" FontFamily="Segoe UI"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
