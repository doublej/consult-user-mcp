<UserControl x:Class="ConsultUserMCP.Settings.AboutSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel>
        <TextBlock Text="Consult User MCP" Foreground="#E6E6E6"
                   FontSize="22" FontWeight="Bold" FontFamily="Segoe UI"
                   Margin="0,0,0,4" />
        <TextBlock x:Name="VersionText" Foreground="#A0A0A0"
                   FontSize="13" FontFamily="Segoe UI" Margin="0,0,0,20" />

        <TextBlock Foreground="#A0A0A0" FontSize="13" FontFamily="Segoe UI"
                   TextWrapping="Wrap" Margin="0,0,0,20">
            Interactive dialog system for MCP-connected AI assistants.
            Shows confirmation, choice, text input, and multi-question dialogs
            with snooze and feedback support.
        </TextBlock>

        <TextBlock Foreground="#666" FontSize="12" FontFamily="Segoe UI">
            <Hyperlink x:Name="IssuesLink" Foreground="#3B82F6"
                       TextDecorations="None" RequestNavigate="OnLinkNavigate">
                Report an issue on GitHub
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
