<UserControl x:Class="ConsultUserMCP.Settings.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel>
        <!-- Snooze banner (visible when snoozed) -->
        <Border x:Name="SnoozeBanner" Background="#3B2510" CornerRadius="8"
                Padding="16,12" Margin="0,0,0,20" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="SnoozeTimerText" Foreground="#F59E0B"
                               FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                               Text="Snoozed - 0:00 remaining" />
                    <TextBlock x:Name="SnoozeMissedText" Foreground="#A0A0A0"
                               FontSize="12" FontFamily="Segoe UI" Margin="0,4,0,0"
                               Text="0 missed dialogs" />
                </StackPanel>
                <Button Grid.Column="1" Content="End Snooze" Click="OnEndSnooze"
                        Padding="16,8" Background="#F59E0B" Foreground="#1E1E1E"
                        FontWeight="SemiBold" FontSize="13" FontFamily="Segoe UI"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Position -->
        <TextBlock Text="Position" Style="{x:Null}" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI" />
        <TextBlock Text="Where dialogs appear on screen" Foreground="#A0A0A0"
                   FontSize="12" FontFamily="Segoe UI" Margin="0,4,0,8" />
        <ComboBox x:Name="PositionCombo" SelectionChanged="OnPositionChanged"
                  Width="200" HorizontalAlignment="Left" Margin="0,0,0,24">
            <ComboBoxItem Content="Left" />
            <ComboBoxItem Content="Center" />
            <ComboBoxItem Content="Right" />
        </ComboBox>

        <!-- Size -->
        <TextBlock Text="Size" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI" />
        <TextBlock Text="Dialog scaling factor" Foreground="#A0A0A0"
                   FontSize="12" FontFamily="Segoe UI" Margin="0,4,0,8" />
        <ComboBox x:Name="SizeCombo" SelectionChanged="OnSizeChanged"
                  Width="200" HorizontalAlignment="Left" Margin="0,0,0,24">
            <ComboBoxItem Content="Compact (0.85x)" />
            <ComboBoxItem Content="Regular (1.0x)" />
            <ComboBoxItem Content="Large (1.2x)" />
        </ComboBox>

        <!-- Appearance -->
        <TextBlock Text="Appearance" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                   Margin="0,0,0,12" />

        <TextBlock Text="Sound on show" Foreground="#A0A0A0"
                   FontSize="12" FontFamily="Segoe UI" Margin="0,0,0,4" />
        <ComboBox x:Name="SoundCombo" SelectionChanged="OnSoundChanged"
                  Width="200" HorizontalAlignment="Left" Margin="0,0,0,12">
            <ComboBoxItem Content="None" />
            <ComboBoxItem Content="Subtle" />
            <ComboBoxItem Content="Pop" />
            <ComboBoxItem Content="Chime" />
        </ComboBox>

        <CheckBox x:Name="AnimationsCheck" Content="Animations enabled"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,8" />
        <CheckBox x:Name="AlwaysOnTopCheck" Content="Always on top"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,8" />
        <CheckBox x:Name="ShowCommentCheck" Content="Show comment field"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,24" />

        <!-- Behavior -->
        <TextBlock Text="Behavior" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                   Margin="0,0,0,12" />

        <CheckBox x:Name="CooldownCheck" Content="Button cooldown"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,8" />
        <StackPanel x:Name="CooldownPanel" Orientation="Horizontal" Margin="24,0,0,24">
            <Slider x:Name="CooldownSlider" Minimum="0.1" Maximum="3.0"
                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                    Width="200" ValueChanged="OnCooldownChanged" />
            <TextBlock x:Name="CooldownLabel" Foreground="#A0A0A0"
                       FontSize="12" FontFamily="Segoe UI" Margin="12,0,0,0"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Notifications -->
        <TextBlock Text="Notifications" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                   Margin="0,0,0,12" />

        <CheckBox x:Name="SoundQuestionsCheck" Content="Play sound for questions"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,8" />
        <CheckBox x:Name="SoundNotificationsCheck" Content="Play sound for notifications"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,8" />
        <CheckBox x:Name="MuteSnoozedCheck" Content="Mute sounds while snoozed"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnSettingToggled" Unchecked="OnSettingToggled"
                  Margin="0,0,0,8" />
    </StackPanel>
</UserControl>
