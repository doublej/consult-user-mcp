<UserControl x:Class="ConsultUserMCP.Settings.UpdatesSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel>
        <!-- Current version -->
        <TextBlock Text="Current Version" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI" />
        <TextBlock x:Name="VersionText" Foreground="#A0A0A0"
                   FontSize="14" FontFamily="Segoe UI" Margin="0,4,0,24" />

        <!-- Status -->
        <Border x:Name="StatusBorder" Background="#252525" CornerRadius="8"
                Padding="16,12" Margin="0,0,0,24">
            <TextBlock x:Name="StatusText" Foreground="#A0A0A0"
                       FontSize="13" FontFamily="Segoe UI" TextWrapping="Wrap" />
        </Border>

        <!-- Automation -->
        <TextBlock Text="Automation" Foreground="#E6E6E6"
                   FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"
                   Margin="0,0,0,12" />

        <CheckBox x:Name="AutoCheckBox" Content="Automatically check for updates"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnAutoCheckToggled" Unchecked="OnAutoCheckToggled"
                  Margin="0,0,0,12" />

        <TextBlock Text="Check frequency" Foreground="#A0A0A0"
                   FontSize="12" FontFamily="Segoe UI" Margin="0,0,0,4" />
        <ComboBox x:Name="CadenceCombo" SelectionChanged="OnCadenceChanged"
                  Width="200" HorizontalAlignment="Left" Margin="0,0,0,12">
            <ComboBoxItem Content="Daily" />
            <ComboBoxItem Content="Weekly" />
            <ComboBoxItem Content="Manual only" />
        </ComboBox>

        <TextBlock Text="Reminder interval" Foreground="#A0A0A0"
                   FontSize="12" FontFamily="Segoe UI" Margin="0,0,0,4" />
        <ComboBox x:Name="ReminderCombo" SelectionChanged="OnReminderChanged"
                  Width="200" HorizontalAlignment="Left" Margin="0,0,0,12">
            <ComboBoxItem Content="1 day" />
            <ComboBoxItem Content="3 days" />
            <ComboBoxItem Content="7 days" />
        </ComboBox>

        <CheckBox x:Name="PrereleaseCheck" Content="Include prerelease updates"
                  Foreground="#E6E6E6" FontFamily="Segoe UI" FontSize="13"
                  Checked="OnPrereleaseToggled" Unchecked="OnPrereleaseToggled"
                  Margin="0,0,0,24" />

        <!-- Manual check -->
        <Button x:Name="CheckNowButton" Content="Check Now" Click="OnCheckNow"
                Padding="20,10" HorizontalAlignment="Left"
                FontSize="13" FontFamily="Segoe UI" FontWeight="SemiBold"
                Foreground="#E6E6E6" Background="#3B82F6" BorderThickness="0" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#60A5FA" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</UserControl>
